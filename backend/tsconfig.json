{
  "compilerOptions": {
    // Environment
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",   // ðŸ‘ˆ key change for tsx

    // Node backend types
    "lib": ["ES2021"],
    "types": ["node"],               // use @types/node you already installed

    // Output (tsx runs TS directly, so noEmit is fine)
    "noEmit": true,
    "sourceMap": true,

    // Declarations are irrelevant when noEmit=true, but harmless:
    "declaration": false,
    "declarationMap": false,

    // Stricter typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // Module/style options
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // IMPORTANT: let imports be extension-less and JS-like
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
